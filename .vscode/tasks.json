{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ensure-output-dir",
            "type": "shell",
            "command": "mkdir",
            "args": ["-p", "output"],
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [],
            "windows": {
                "command": "cmd",
                "args": ["/c", "if not exist output mkdir output"]
            }
        },
        {
            "label": "install-requirements",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "run-flask-dev",
            "type": "shell",
            "command": "python",
            "args": ["app.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "ensure-output-dir",
            "problemMatcher": [],
            "windows": {
                "command": "cmd",
                "args": ["/c", "set FLASK_ENV=development && set FLASK_DEBUG=1 && python app.py"]
            },
            "linux": {
                "command": "bash",
                "args": ["-c", "FLASK_ENV=development FLASK_DEBUG=1 python app.py"]
            },
            "osx": {
                "command": "bash",
                "args": ["-c", "FLASK_ENV=development FLASK_DEBUG=1 python app.py"]
            }
        },
        {
            "label": "docker-build",
            "type": "shell",
            "command": "docker-compose",
            "args": ["build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "docker-up",
            "type": "shell",
            "command": "docker-compose",
            "args": ["up", "-d"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "ensure-output-dir",
            "problemMatcher": []
        },
        {
            "label": "docker-down",
            "type": "shell",
            "command": "docker-compose",
            "args": ["down"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "docker-logs",
            "type": "shell",
            "command": "docker-compose",
            "args": ["logs", "-f"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}
